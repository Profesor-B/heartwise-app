<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (System Default, uses device settings) -->
    <style name="Theme.App.SystemDefault" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <!-- Customize button styles -->
        <item name="buttonStyle">@style/Widget.Button.Primary</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.App.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Light theme colors -->
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryVariant">@color/lightPrimaryDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/lightAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/darkGray</item>
        <item name="android:windowBackground">@color/lightBackground</item>
        <!-- Customize button styles -->
        <item name="buttonStyle">@style/Widget.Button.Light</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.App.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Dark theme colors -->
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryVariant">@color/darkPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/darkAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/lightGray</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <!-- Customize button styles -->
        <item name="buttonStyle">@style/Widget.Button.Dark</item>
    </style>

    <!-- Custom button styles -->
    <style name="Widget.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Button.Light" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/lightPrimary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/darkPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
