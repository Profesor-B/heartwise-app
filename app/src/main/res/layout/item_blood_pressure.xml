<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="12dp">
    <!--Start of item bloodpressure -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Measurement Date -->
        <TextView
            android:id="@+id/textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2024-04-27"
            android:textSize="14sp"
            android:textColor="@color/grey" />

        <!-- Blood Pressure Values -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Systolic -->
            <TextView
                android:id="@+id/textView_systolic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Systolic: 120 mmHg"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <!-- Diastolic -->
            <TextView
                android:id="@+id/textView_diastolic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Diastolic: 80 mmHg"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Heart Rate (Optional) -->
        <TextView
            android:id="@+id/textView_heart_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Rate: 72 bpm"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
